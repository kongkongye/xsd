<?xml version="1.0" encoding="UTF-8"?>
<xs:schema xmlns:xs="http://www.w3.org/2001/XMLSchema"
           targetNamespace="http://xsd.kongkongye.com/page.xsd"
           xmlns="http://xsd.kongkongye.com/page.xsd"
           elementFormDefault="qualified">
    <xs:element name="page">
        <xs:complexType>
            <xs:sequence minOccurs="0" maxOccurs="unbounded">
                <xs:choice>
                    <xs:element name="line" type="Line">
                        <xs:annotation>
                            <xs:documentation>行内容(可使用变量)</xs:documentation>
                        </xs:annotation>
                    </xs:element>
                    <xs:element name="list" type="List"/>
                    <xs:element name="import" type="Import">
                        <xs:annotation>
                            <xs:documentation>导入(页面)</xs:documentation>
                        </xs:annotation>
                    </xs:element>
                    <xs:element name="br" type="Br"/>
                </xs:choice>
            </xs:sequence>
            <xs:attribute name="title">
                <xs:annotation>
                    <xs:documentation>标题(可使用变量)</xs:documentation>
                </xs:annotation>
            </xs:attribute>
            <xs:attribute name="size" type="ListSizeType">
                <xs:annotation>
                    <xs:documentation>列表大小(可选)</xs:documentation>
                </xs:annotation>
            </xs:attribute>
            <xs:attribute name="context">
                <xs:annotation>
                    <xs:documentation>上下文(可选),格式'插件'或'插件:key'</xs:documentation>
                </xs:annotation>
            </xs:attribute>
            <xs:attribute name="min-width">
                <xs:annotation>
                    <xs:documentation>最小宽度(默认不设置)</xs:documentation>
                </xs:annotation>
            </xs:attribute>
        </xs:complexType>
    </xs:element>

    <xs:complexType name="Base">
        <xs:attribute name="con">
            <xs:annotation>
                <xs:documentation>条件</xs:documentation>
            </xs:annotation>
        </xs:attribute>
    </xs:complexType>

    <xs:complexType name="Component">
        <xs:complexContent>
            <xs:extension base="Base">
                <xs:attribute name="style"/>
                <xs:attribute name="width" type="xs:integer"/>
            </xs:extension>
        </xs:complexContent>
    </xs:complexType>

    <xs:complexType name="Line">
        <xs:complexContent>
            <xs:extension base="Base">
                <xs:group ref="Container" maxOccurs="unbounded"/>
                <xs:attributeGroup ref="Container"/>
            </xs:extension>
        </xs:complexContent>
    </xs:complexType>

    <xs:complexType name="List">
        <xs:complexContent>
            <xs:extension base="Base">
                <xs:choice maxOccurs="unbounded">
                    <xs:element name="line" type="Line"/>
                    <xs:element name="import" type="Import">
                        <xs:annotation>
                            <xs:documentation>导入(页面)</xs:documentation>
                        </xs:annotation>
                    </xs:element>
                    <xs:element name="br" type="Br"/>
                </xs:choice>
            </xs:extension>
        </xs:complexContent>
    </xs:complexType>

    <xs:complexType name="Import">
        <xs:attribute name="path" use="required">
            <xs:annotation>
                <xs:documentation>导入的页面路径(如template/list)</xs:documentation>
            </xs:annotation>
        </xs:attribute>
    </xs:complexType>

    <xs:complexType name="Br">
        <xs:complexContent>
            <xs:extension base="Base"/>
        </xs:complexContent>
    </xs:complexType>

    <xs:complexType name="Container">
        <xs:complexContent>
            <xs:extension base="Component">
                <xs:group ref="Container" maxOccurs="unbounded"/>
                <xs:attributeGroup ref="Container"/>
            </xs:extension>
        </xs:complexContent>
    </xs:complexType>

    <xs:complexType name="Text">
        <xs:complexContent mixed="true">
            <xs:extension base="Component">
                <xs:attribute name="align" type="TextAlign">
                    <xs:annotation>
                        <xs:documentation>文字对齐</xs:documentation>
                    </xs:annotation>
                </xs:attribute>
                <xs:attribute name="br" type="xs:boolean" default="false">
                    <xs:annotation>
                        <xs:documentation>是否解析换行符</xs:documentation>
                    </xs:annotation>
                </xs:attribute>
            </xs:extension>
        </xs:complexContent>
    </xs:complexType>

    <xs:complexType name="Button">
        <xs:complexContent mixed="true">
            <xs:extension base="Component">
                <xs:attribute name="cmd">
                    <xs:annotation>
                        <xs:documentation>
                            命令(默认为空,将不会执行命令),
                            服务端命令以'/'提示符开头,
                            客户端命令以'$'提示符开头
                        </xs:documentation>
                    </xs:annotation>
                </xs:attribute>
                <xs:attribute name="mode" type="ButtonMode" default="stay">
                    <xs:annotation>
                        <xs:documentation>
                            模式,指执行按钮后的动作
                            back: 返回上一页
                            stay(默认): 停留,无操作
                            refresh: 刷新,执行成功后刷新页面
                        </xs:documentation>
                    </xs:annotation>
                </xs:attribute>
            </xs:extension>
        </xs:complexContent>
    </xs:complexType>

    <xs:complexType name="Input">
        <xs:complexContent>
            <xs:extension base="Component">
                <xs:attribute name="name" use="required">
                    <xs:annotation>
                        <xs:documentation>变量名</xs:documentation>
                    </xs:annotation>
                </xs:attribute>
                <xs:attribute name="type" type="InputType" default="text">
                    <xs:annotation>
                        <xs:documentation>变量类型限制(multi为true时此项无效果)</xs:documentation>
                    </xs:annotation>
                </xs:attribute>
                <xs:attribute name="default">
                    <xs:annotation>
                        <xs:documentation>默认值(可以使用部分变量)</xs:documentation>
                    </xs:annotation>
                </xs:attribute>
                <xs:attribute name="description">
                    <xs:annotation>
                        <xs:documentation>描述(可以使用变量)</xs:documentation>
                    </xs:annotation>
                </xs:attribute>
                <xs:attribute name="fix-width" type="xs:int">
                    <xs:annotation>
                        <xs:documentation>固定宽度(单位rem)</xs:documentation>
                    </xs:annotation>
                </xs:attribute>
                <xs:attribute name="multi" type="xs:boolean" default="false">
                    <xs:annotation>
                        <xs:documentation>是否多行</xs:documentation>
                    </xs:annotation>
                </xs:attribute>
            </xs:extension>
        </xs:complexContent>
    </xs:complexType>

    <!--group-->

    <xs:group name="Container">
        <xs:choice>
            <xs:element name="text" type="Text" minOccurs="0">
                <xs:annotation>
                    <xs:documentation>文本内容(可使用变量)</xs:documentation>
                </xs:annotation>
            </xs:element>
            <xs:element name="button" type="Button" minOccurs="0">
                <xs:annotation>
                    <xs:documentation>按钮内容(可使用变量)</xs:documentation>
                </xs:annotation>
            </xs:element>
            <xs:element name="input" type="Input" minOccurs="0"/>
            <xs:element name="container" type="Container" minOccurs="0"/>
        </xs:choice>
    </xs:group>

    <xs:attributeGroup name="Container">
        <xs:attribute name="align" type="FlexAlign">
            <xs:annotation>
                <xs:documentation>组件对齐</xs:documentation>
            </xs:annotation>
        </xs:attribute>
    </xs:attributeGroup>

    <!--简易类型-->
    <xs:simpleType name="ListSizeType">
        <xs:restriction base="xs:integer">
            <xs:minInclusive value="1"/>
        </xs:restriction>
    </xs:simpleType>

    <xs:simpleType name="ButtonMode">
        <xs:restriction base="xs:string">
            <xs:enumeration value="back"/>
            <xs:enumeration value="stay"/>
            <xs:enumeration value="refresh"/>
        </xs:restriction>
    </xs:simpleType>

    <xs:simpleType name="InputType">
        <xs:restriction base="xs:string">
            <xs:enumeration value="text"/>
            <xs:enumeration value="number"/>
            <xs:enumeration value="password"/>
        </xs:restriction>
    </xs:simpleType>

    <xs:simpleType name="FlexAlign">
        <xs:restriction base="xs:string">
            <xs:enumeration value="left"/>
            <xs:enumeration value="center"/>
            <xs:enumeration value="right"/>
            <xs:enumeration value="space-between"/>
            <xs:enumeration value="space-around"/>
        </xs:restriction>
    </xs:simpleType>

    <xs:simpleType name="TextAlign">
        <xs:restriction base="xs:string">
            <xs:enumeration value="left"/>
            <xs:enumeration value="center"/>
            <xs:enumeration value="right"/>
        </xs:restriction>
    </xs:simpleType>
</xs:schema>
